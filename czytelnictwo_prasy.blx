trendL.gw &lt;- lm(data=dfN, gw ~ trend )
trendL.fakt &lt;- lm(data=dfN, fakt ~ trend )
trendL.se &lt;- lm(data=dfN, se ~ trend )

trendL.gw
trendL.fakt
trendL.se
</pre>
